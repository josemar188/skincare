<script>
document.addEventListener('DOMContentLoaded', function() {
// Add to cart functionality
const addButtons = document.querySelectorAll('button:not([type])');
addButtons.forEach(button => {
if (button.textContent.includes('Adicionar')) {
button.addEventListener('click', function() {
const productName = this.closest('div').querySelector('h3').textContent;
// Create toast notification
const toast = document.createElement('div');
toast.className = 'fixed top-20 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white px-4 py-2 rounded-lg text-sm z-50';
toast.textContent = `${productName} adicionado ao carrinho`;
document.body.appendChild(toast);
// Remove toast after 2 seconds
setTimeout(() => {
toast.remove();
}, 2000);
});
}
});
// Results carousel like functionality
const likeButtons = document.querySelectorAll('.ri-heart-line');
likeButtons.forEach(button => {
button.addEventListener('click', function() {
const countElement = this.parentElement.nextElementSibling;
let count = parseInt(countElement.textContent);
if (this.classList.contains('ri-heart-line')) {
this.classList.remove('ri-heart-line');
this.classList.add('ri-heart-fill');
count += 1;
} else {
this.classList.remove('ri-heart-fill');
this.classList.add('ri-heart-line');
count -= 1;
}
countElement.textContent = count;
});
});
// Carousel navigation
const leftArrow = document.querySelector('.ri-arrow-left-s-line');
const rightArrow = document.querySelector('.ri-arrow-right-s-line');
const carousel = document.querySelector('.hide-scroll-bar');
if (leftArrow && rightArrow && carousel) {
leftArrow.addEventListener('click', function() {
carousel.scrollBy({ left: -280, behavior: 'smooth' });
});
rightArrow.addEventListener('click', function() {
carousel.scrollBy({ left: 280, behavior: 'smooth' });
});
}
});
</script>
</body>
